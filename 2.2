using System;
class MainClass
{
    public static void Main(string[] args)
    {
        int p1;
        int p2;
        int p1Score = 0;
        int p2Score = 0;

        for (int i = 0; i < 10; i++)
        {
            Console.Write("Goals Player 1: ");
            p1 = Convert.ToInt32(Console.ReadLine());
            Console.Write("Goals Player 2: ");
            p2 = Convert.ToInt32(Console.ReadLine());
            if (p1 > p2)
            {
                p1Score += 2;
                Console.WriteLine("Player 1 Wins the Round.");
            }
            else if (p2 > p1)
            {
                p2Score += 2;
                Console.WriteLine("Player 2 Wins the Round.");
            }
            else
            {
                p1Score++;
                p2Score++;
            }
        }
        Console.WriteLine("Player 1 score is {0}", p1Score);
        Console.WriteLine("Player 2 score is {0}", p2Score);
        if (p1Score > p2Score)
        {
            Console.WriteLine("Player 1 wins with {0} points!", p1Score);
        }
        else if (p2Score > p1Score)
        {
            Console.WriteLine("Player 2 wins with {0} points!", p2Score);
        }
        else
        {
            Console.WriteLine("It's a Draw!");
        }
    }
}
